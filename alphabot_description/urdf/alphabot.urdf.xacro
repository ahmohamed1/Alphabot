<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="alphabot">
    <!-- Load Simulated or Real Hardware Interfaces -->
    <xacro:arg name="is_sim" default="true"/>

    <xacro:include filename="$(find alphabot_description)/urdf/alphabot_gazebo.xacro"/> 
    <xacro:include filename="$(find alphabot_description)/urdf/alphabot_ros2_control.xacro"/>  
        
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <link name="base_footprint"/>

    <link name="base_link">
        <inertial>
            <mass value="1.5"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.06" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.33 0.33 0.15"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.15" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.33 0.33 0.0"/>
            </geometry>
        </collision>
    </link>

    <link name="wheel_left_link">
        <inertial>
            <mass value="0.2"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.2"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.035" length="0.025"/>
            </geometry>    
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.03" length="0.025"/>
            </geometry>    
        </collision>
    </link>  

    <link name="wheel_right_link">
        <inertial>
            <mass value="0.2"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.02"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.03" length="0.025"/>
            </geometry>    
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.03" length="0.025"/>
            </geometry>    
        </collision>
    </link>  

    <link name="caster_front_link">
        <inertial>
            <mass value="0.05"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
    </link>

    <link name="caster_rear_link">
        <inertial>
            <mass value="0.05"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.035"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
    </link>

    <!-- Define the joints -->
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.04" rpy="0.0 0.0 0.0"/>
    </joint>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_right_link"/>
        <axis xyz="0.0 1.0 0.0"/>
        <origin xyz="0.01 -0.118 0.0" rpy="0.0 0.0 0.0"/>
    </joint>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_left_link"/>
        <axis xyz="0.0 1.0 0.0"/>
        <origin xyz="0.01 0.118 0.0" rpy="0.0 0.0 0.0"/>
    </joint>

    <joint name="caster_front_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_front_link"/>
        <axis xyz="0.0 1.0 0.0"/>
        <origin xyz="-0.12 -0.118 0.0" rpy="0.0 0.0 0.0"/>
    </joint>
    
    <joint name="caster_rear_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_rear_link"/>
        <axis xyz="0.0 1.0 0.0"/>
        <origin xyz="-0.12 0.118 0.0" rpy="0.0 0.0 0.0"/>
    </joint>

</robot>